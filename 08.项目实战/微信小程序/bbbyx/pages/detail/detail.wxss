/* pages/detail.wxss */
.detail-container {
  display: flex;
  flex-direction: column;
}
.head-img {
  width: 100%;
  height: 460rpx;
}
.music-img {
  position: absolute;
  top: 200rpx;
  left: 50%;
  margin-left: -30rpx;
  width: 60rpx;
  height: 60rpx;
}
.avatar-date {
  padding: 10rpx;
}
.avatar-date image {
  width: 64rpx;
  height: 64rpx;
  vertical-align: middle;
}
.avatar-date text {
  font-size: 28rpx;
  margin-left: 10rpx;
}
.company {
  font-size: 38rpx;
  font-weight: 400;
  margin-left: 10rpx;
}
.collection-container {
  position: relative;
}
.collection {
  float: right;
  margin-right: 50rpx;
}
.collection image {
  width: 90rpx;
  height: 90rpx;
  margin-right: 20rpx;
}
.line {
  position: absolute;
  width: 90%;
  height: 2rpx;
  background-image: linear-gradient(#333, #fff);
  top: 45rpx;
  left: 5%;
  z-index: -1;
}
button {
  width: 280rpx;
  height: 80rpx;
}
.content {
  text-indent: 64rpx;
  line-height: 48rpx;
}